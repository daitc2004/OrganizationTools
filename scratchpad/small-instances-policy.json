{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SmallEc2Instances",
            "Effect": "Deny",
            "Action": "ec2:RunInstances",
            "Resource": [
                "*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "ec2:InstanceType": [
                        "t3.micro",
                        "t3.small",
                        "t3.nano",
                        "t3.large"
                    ]
                }
            }
        }
    ]
}
